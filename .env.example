# VeriSynth Research OS Environment Configuration
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development
DEBUG=true

# Google Cloud
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
FIRESTORE_DATABASE=(default)

# Vertex AI
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MATCHING_ENGINE_INDEX=
VERTEX_AI_MATCHING_ENGINE_ENDPOINT=

# LLM API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROK_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4-turbo-preview

# MAKER Configuration
MAKER_K_VALUE=2
MAKER_TIMEOUT_SECONDS=300
MAKER_MAX_CONCURRENT=10
MAKER_RED_FLAG_THRESHOLD=0.3

# Memory Configuration
MEMORY_MAX_RESULTS=10
MEMORY_SIMILARITY_THRESHOLD=0.7

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
